<%= cache(@badge.to_json) do %>
<svg xmlns="http://www.w3.org/2000/svg" width="<%= @badge.left_width + @badge.right_width %>" height="20">
  <linearGradient id="b" x2="0" y2="100%">
    <stop offset="0" stop-color="#bbb" stop-opacity=".1"/>
    <stop offset="1" stop-opacity=".1"/>
  </linearGradient>
  <mask id="a">
    <rect width="<%= @badge.left_width + @badge.right_width %>" height="20" rx="3" fill="#fff"/>
  </mask>
  <g mask="url(#a)">
    <rect width="<%= @badge.left_width %>" height="20" fill="<%= @badge.left_color %>"/>
    <rect x="<%= @badge.left_width %>" width="<%= @badge.right_width %>" height="20" fill="<%= @badge.right_color %>"/>
    <rect width="<%= @badge.left_width + @badge.right_width %>" height="20" fill="url(#b)"/>
  </g>
  <g fill="#fff" text-anchor="middle" font-family="DejaVu Sans,Verdana,Geneva,sans-serif" font-size="11">
    <text x="<%= @badge.left_text_x %>" y="15" fill="#010101" fill-opacity=".3"><%= @badge.left_text %></text>
    <text x="<%= @badge.left_text_x %>" y="14"><%= @badge.left_text %></text>
    <text x="<%= @badge.right_text_x %>" y="15" fill="#010101" fill-opacity=".3"><%= @badge.right_text %></text>
    <text x="<%= @badge.right_text_x %>" y="14"><%= @badge.right_text %></text>
  </g>
</svg>
<% end %>
