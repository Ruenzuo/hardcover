<%= cache(@badge.to_json) do %>
<svg xmlns="http://www.w3.org/2000/svg" width="<%= @badge.left_width + @badge.right_width %>" height="18">
  <linearGradient id="smooth" x2="0" y2="100%">
    <stop offset="0"  stop-color="#fff" stop-opacity=".7"/>
    <stop offset=".1" stop-color="#aaa" stop-opacity=".1"/>
    <stop offset=".9" stop-color="#000" stop-opacity=".3"/>
    <stop offset="1"  stop-color="#000" stop-opacity=".5"/>
  </linearGradient>

  <mask id="round">
    <rect width="<%= @badge.left_width + @badge.right_width %>" height="18" rx="4" fill="#fff"/>
  </mask>

  <g mask="url(#round)">
    <rect width="<%= @badge.left_width %>" height="18" fill="<%= @badge.left_color %>"/>
    <rect x="<%= @badge.left_width %>" width="<%= @badge.right_width %>" height="18" fill="<%= @badge.right_color %>"/>
    <rect width="<%= @badge.left_width + @badge.right_width %>" height="18" fill="url(#smooth)"/>
  </g>

  <g fill="#fff" text-anchor="middle" font-family="DejaVu Sans,Verdana,Geneva,sans-serif" font-size="11">
    <text x="<%= @badge.left_text_x %>" y="14" fill="#010101" fill-opacity=".3"><%= @badge.left_text %></text>
    <text x="<%= @badge.left_text_x %>" y="13"><%= @badge.left_text %></text>
    <text x="<%= @badge.right_text_x %>" y="14" fill="#010101" fill-opacity=".3"><%= @badge.right_text %></text>
    <text x="<%= @badge.right_text_x %>" y="13"><%= @badge.right_text %></text>
  </g>
</svg>
<% end %>
